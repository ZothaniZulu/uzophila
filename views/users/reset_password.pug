extends user_layout

block content
    br
    div.row
        div.col-sm-12.col-md-12.col-lg-6.col-xl-6.offset-xl-3.offset-lg-3.mt-5.sign-in-container
            .jumbotron
                div.user-sign-in 
                    div.row
                        .col-md-6.col-lg-6.offset-md-3.offset-lg-3.text-center 
                            img(src='/images/logo.PNG' width='80' alt='')
                            h2.text-center Errands Hub
                    hr
                    if errors
                        each error, i in errors
                            div(class="alert alert-danger") #{error.msg}
                    div.row
                        div.col-md-10.col-lg-10.mt-2.offset-md-1.offset-lg-1
                            h3.text-center Create new password
                    div.row
                        div.col-md-10.col-lg-10.mt-2.offset-md-1.offset-lg-1
                            != messages('message', locals)
                    form(method='POST', action=`${server_url}/users/reset_password/`+user._id)
                        #form-group 
                            label New password
                            input.form-control(name='password', type='password' placeholder='Enter password' required)
                        #form-group 
                            label Confirm password
                            input.form-control(name='password2', type='password' placeholder='Confirm password' required)
                        br
                        input.btn.btn-primary.btn-block(type='submit',value='Submit')